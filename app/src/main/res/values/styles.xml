<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1e53a8</item>
        <item name="colorPrimaryDark">#1e53a8</item>
        <item name="colorAccent">#1e53a8</item>
    </style>

    <style name="LayoutItem">
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LayoutControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="HeaderLayoutItem">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#80AAAAAA</item>
    </style>

    <style name="PositiveButton">
        <item name="android:background">@drawable/positive_button_selector</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="NegativeButton">
        <item name="android:background">@drawable/negative_button_selector</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
